<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Wilder" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Wilder.Toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Wilder.Toolbar.Guideline">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_begin">56dp</item>
    </style>

    <style name="Wilder.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Wilder.Toolbar.ImageButton">
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="Wilder.ListElement">
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="Wilder.ListElement.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Wilder.ListElement.Image">
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="Wilder.InfoElement">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Wilder.InfoElement.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Wilder.TypePicker"></style>

    <style name="Wilder.TypePicker.Heading">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>


</resources>